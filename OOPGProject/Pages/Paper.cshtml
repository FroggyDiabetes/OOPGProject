@page
@model OOPGProject.Pages.PaperModel
@{
}

<h2 style="padding-top: 20px; padding-bottom: 30px;">Paper Products</h2>

<div class="flex-container">
    <div class="flex-child Sidebar">
        <form method="post">
            <div class="container" style="padding: 15px; height: 50px;">
                <h4>Filters</h4> <hr />
                <input type="checkbox" asp-for="All"/> All <br />
                <input type="checkbox" asp-for="FPlanners" /> Planners <br />
                <input type="checkbox" asp-for="FNotepads" /> Notepads <br />
                <input type="checkbox" asp-for="FSketchpads" /> Sketchpads <br />
                <input type="checkbox" asp-for="FOthers" /> Others <br /><br />
                <input type="submit" value="OK" />
            </div>
        </form>
    </div>

    <div class="flex-child Products">
        <div class="container">
            <div class="row" >
                @for (int i = 0; i < Model.Paper.Count; i++)
                {
                    <div class="col">
                        <div class="wrapper">
                            <a href="@Model.Paper[i][3]"> <center><img src="@Model.Paper[i][2]" style="width: 260px; height: 260px;" /></center></a>
                            <h3 class="text-center" style="font-size: 20px;">@Model.Paper[i][0]</h3>
                            <h4 class="text-center" style="font-size: 15px; padding-bottom: 50px;">$@Model.Paper[i][1]</h4>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .flex-container {
        display: flex;
        height: 100%;
    }

    .Sidebar {
        background-color: white;
        display: flex;
        flex: 1;
    }

    .Products {
        display: flex;
        flex: 4.5;
        justify-content: center;
    }
</style>